{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "confluence",
  "version": "1.0.1",
  "title": "Confluence",
  "description": "Quickly navigate, create and search Confluence through Raycast.",
  "icon": "command-icon.png",
  "author": "tbrown",
  "contributors": [
    "xmok",
    "litomore",
    "arpitdalal",
    "k0981465867"
  ],
  "categories": [
    "Productivity",
    "Documentation"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search",
      "title": "Search",
      "subtitle": "Confluence",
      "description": "Search for pages and blogs across Confluence.",
      "mode": "view",
      "preferences": [
        {
          "name": "searchAttachments",
          "label": "Include Attachments",
          "description": "Include attachments in search results.",
          "type": "checkbox",
          "default": false,
          "required": false
        },
        {
          "name": "sort",
          "type": "dropdown",
          "required": false,
          "title": "Sort by",
          "description": "Sort search results by",
          "data": [
            {
              "value": "",
              "title": "--"
            },
            {
              "value": "lastmodified desc",
              "title": "Last modified (desc)"
            },
            {
              "value": "created desc",
              "title": "Created (desc)"
            },
            {
              "value": "title",
              "title": "Title"
            }
          ]
        }
      ]
    },
    {
      "name": "people",
      "title": "People",
      "subtitle": "Confluence",
      "description": "Search for people in Confluence.",
      "mode": "view"
    },
    {
      "name": "recent",
      "title": "Recent",
      "subtitle": "Confluence",
      "description": "See your recently viewed pages.",
      "mode": "view"
    },
    {
      "name": "popular",
      "title": "Popular",
      "subtitle": "Confluence",
      "description": "See what's popular in Confluence.",
      "mode": "view"
    },
    {
      "name": "go",
      "title": "Go",
      "subtitle": "Confluence",
      "description": "Quickly jump to useful places in Confluence.",
      "mode": "view"
    },
    {
      "name": "switch-site",
      "title": "Switch Site",
      "subtitle": "Confluence",
      "description": "Switch your active Confluence site.",
      "mode": "view"
    },
    {
      "name": "new-page",
      "title": "Create Page",
      "subtitle": "Confluence",
      "description": "Create a new page.",
      "mode": "no-view"
    },
    {
      "name": "new-blog",
      "title": "Create Blog",
      "subtitle": "Confluence",
      "description": "Create a new blog.",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@raycast/api": "^1.100.2",
    "@raycast/utils": "^2.0.0",
    "apollo-link-rest": "^0.9.0",
    "apollo3-cache-persist": "^0.15.0",
    "async-mutex": "^0.5.0",
    "cross-fetch": "^4.1.0",
    "graphql": "^15.0.0",
    "qs": "^6.14.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "ray build -o release/v$npm_package_version && rm -rf release/v$npm_package_version/assets && mkdir -p release/v$npm_package_version/assets && cp assets/command-icon.png release/v$npm_package_version/assets/",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepare": "husky"
  },
  "platforms": [
    "macOS"
  ],
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
